{
  "version": 3,
  "name": "KrakenD on k8s",
  "port": "{{ .Values.gateway.containerPort }}",
  "cache_ttl": "3600s",
  "timeout": "3s",
  "extra_config": {
    "router": {
      "auto_options": true
    },
    "telemetry/opentelemetry": {
      "service_name": "krakend_prometheus_service",
      "metric_reporting_period": 1,
      "exporters": {
          "prometheus": [
              {
                  "name": "local_prometheus",
                  "port": "{{ .Values.gateway.metricsTargetPort }}",
                  "process_metrics": true,
                  "go_metrics": true
              }
          ]
      }
    },
    "security/cors": {
      "allow_origins": [
        "http://{{ .Values.host.app }}"
      ],
      "allow_methods": [
        "GET",
        "HEAD",
        "POST",
        "OPTIONS"
      ],
      "expose_headers": [
        "Content-Length",
        "Content-Type",
        "Authorization"
      ],
      "allow_headers": [
        "Origin",
        "Authorization",
        "Content-Type",
        "Cache-Control",
        "Pragma",
        "Accept-Language"
      ],
      "max_age": "12h",
      "allow_credentials": true,
      "debug": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/healthz",
      "backend": [
        {
          "host": [
            "http://{{ .Values.gateway.name }}-clusterip:{{ .Values.gateway.servicePort }}"
          ],
          "url_pattern": "/__debug/supu"
        }
      ]
    },
    {
      "endpoint": "/v1/values",
      "extra_config": {
        "auth/validator": {
            "operation_debug": true,
            "alg": "{{ .Values.auth.alg }}",
            "jwk_url": "{{ .Values.auth.jwkUrl }}",
            "disable_jwk_security": true
        }
      },
      "backend": [
        {
          "host": [
            "http://{{ .Values.nodejsBack.name }}-clusterip:{{ .Values.nodejsBack.servicePort }}"
          ],
          "is_collection": true,
          "url_pattern": "/values",
          "mapping": {
            "collection": "data"
          }
        }
      ]
    },
    {
      "endpoint": "/v1/nodejs/public",
      "backend": [
        {
          "host": [
            "http://{{ .Values.nodejsBack.name }}-clusterip:{{ .Values.nodejsBack.servicePort }}"
          ],
          "is_collection": true,
          "url_pattern": "/numbers",
          "mapping": {
            "collection": "data"
          }
        }
      ]
    },
    {
      "endpoint": "/v1/nodejs/public2",
      "backend": [
        {
          "host": [
            "http://{{ .Values.nodejsBack.name }}-clusterip:{{ .Values.nodejsBack.servicePort }}"
          ],
          "is_collection": true,
          "url_pattern": "/fibonacci",
          "mapping": {
            "collection": "data"
          }
        }
      ]
    },
    {
      "endpoint": "/v1/golang/public",
      "backend": [
        {
          "host": [
             "http://{{ .Values.golangBack.name }}-clusterip:{{ .Values.golangBack.servicePort }}"
          ],
          "is_collection": true,
          "url_pattern": "/numbers",
          "mapping": {
            "collection": "data"
          }
        }
      ]
    }
  ]
}